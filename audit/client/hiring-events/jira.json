{
    "issueUpdates": [
      
        {%- for bug in site.data.hiring-events -%}{

            {%- assign description = "\n\n*Audit ID:* " | append: bug.ID | append: "\n\n*WCAG Success Criteria:* " | append: bug.SC | append: "\n\n*WCAG Level:* " | append: bug.Level | append: "\n\n*WCAG Synopsis:* " | append: bug.Synopsis | append: "\n\n*Issue/Recommendation:*\n\n" | append: bug.Issue | append: "\n\n*Testing Criteria:* \n\n" | append: bug.Testing | append: "\n\n*Links:* \n\n" | append: bug.Links | append: "\n\n*Screenshot/Video/URL:* \n\n" | append: bug.Screengrab | append: "\n\n*Impact/Severity:* " | append: bug.Impact -%}

            {%- if bug.ProductNote -%}

              {%- assign productNote = "\n\n*Note:* " | append: bug.ProductNote -%}
            
              {%- assign description = description | append: productNote -%}
            
            {%- endif %}

            "fields": {
            
                "project": { 
                    "key": "BRAZ"
                },
                "summary": {{ bug.Summary | prepend: " - " | prepend: bug.ID | prepend: "Accessibility Audit Test: " | jsonify }},
                "description": {{ description | jsonify | replace: "\\n", "\n" }},
                "issuetype": {
                    "name": "Test"
                },
                "assignee": {
                    "name": "Mspellac"
                },
                "labels": ["Accessibility", "WCAG_Level_{{bug.Level}}", "WCAG_Criteria_{{bug.SC | replace: " ", "_"}}"]
            }
  
        }{% unless forloop.last %},{% endunless %}

        {%- endfor -%}

    ]

}